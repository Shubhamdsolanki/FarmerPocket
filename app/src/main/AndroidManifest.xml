<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.company.farmerpocket">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".FarmerPocketApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.RecommendActivity" />
        <activity android:name=".activity.GroupActivity" />
        <activity android:name=".activity.ShopActivity" />
        <activity android:name=".activity.UserActivity" />
        <activity android:name=".activity.WebViewActivity" />
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.UserDataActivity" />
        <activity android:name=".activity.CommonGoodsListActivity" />
        <activity android:name=".activity.AdviceActivity" />
        <activity android:name=".activity.HelpActivity" />
        <activity android:name=".activity.MessageActivity" />
        <activity android:name=".activity.JifenActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.ShopAddressActivity"></activity>
    </application>

</manifest>