<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background_grey"
    android:orientation="vertical"
    tools:context=".activity.SettingActivity">


    <RelativeLayout
        android:id="@+id/layout_qiandao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_selector_white_gray"
        android:padding="@dimen/dimen_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到提醒"
            android:textColor="@color/black_alpha"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_qiandao_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/btn_qiandao_off" />

        <ImageView
            android:id="@+id/iv_qiandao_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/btn_qiandao_on"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:layout_marginLeft="@dimen/dimen_10"
        android:background="@color/common_view_grey" />

    <TextView
        android:id="@+id/tv_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_selector_white_gray"
        android:padding="@dimen/dimen_16"
        android:text="清除缓存"
        android:textColor="@color/black_alpha"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="@color/common_view_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/common_view_grey" />

    <RelativeLayout
        android:id="@+id/layout_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_selector_white_gray"
        android:padding="@dimen/dimen_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喜欢天天食惠？打分鼓励一下"
            android:textColor="@color/black_alpha"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_right_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="@color/common_view_grey" />

</LinearLayout>
