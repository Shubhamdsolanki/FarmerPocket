<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slid_menu_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_40"
            android:src="@mipmap/user_head_icon_pressed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_20"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/slid_user_login"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="登录"
                android:gravity="center"
                android:padding="@dimen/dimen_8"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/button_selector_bg"/>

            <TextView
                android:id="@+id/slid_user_regist"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="注册"
                android:gravity="center"
                android:padding="@dimen/dimen_8"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@drawable/button_selector_bg"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/gray_8f" />

                <ImageView
                    android:id="@+id/slid_menu_item_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/slid_menu_item_chaye" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/gray_8f" />


                <ImageView
                    android:id="@+id/slid_menu_item_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/slid_menu_item_shuiguo" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/gray_8f" />

                <ImageView
                    android:id="@+id/slid_menu_item_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/slid_menu_item_nongchan" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/gray_8f" />


                <ImageView
                    android:id="@+id/slid_menu_item_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/slid_menu_item_shuichan" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/gray_8f" />


                <ImageView
                    android:id="@+id/slid_menu_item_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/slid_menu_item_jinkoushuiguo" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/gray_8f" />


                <ImageView
                    android:id="@+id/slid_menu_item_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/slid_menu_item_jinkounongchan" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/gray_8f" />

                <ImageView
                    android:id="@+id/slid_menu_item_seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/slid_menu_item_jinkoushuichan" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/gray_8f" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>