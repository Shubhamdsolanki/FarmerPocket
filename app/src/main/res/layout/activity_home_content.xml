<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.company.farmerpocket.activity.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.company.farmerpocket.component.banner.ConvenientBanner
            android:id="@+id/convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="140dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_home_type_chaye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="homeTypeClick"
                android:src="@mipmap/icon_home_type_chaye" />

            <ImageView
                android:id="@+id/icon_home_type_shuiguo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="homeTypeClick"
                android:src="@mipmap/icon_home_type_shuiguo" />

            <ImageView
                android:id="@+id/icon_home_type_nongchan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="homeTypeClick"
                android:src="@mipmap/icon_home_type_nongchan" />

            <ImageView
                android:id="@+id/icon_home_type_shuichanhaixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="homeTypeClick"
                android:src="@mipmap/icon_home_type_shuichanhaixian" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_home_type_jinkoushuiguo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="homeTypeClick"
                android:src="@mipmap/icon_home_type_jinkoushuiguo" />

            <ImageView
                android:id="@+id/icon_home_type_jinkounongchan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="homeTypeClick"
                android:src="@mipmap/icon_home_type_jinkounongchan" />

            <ImageView
                android:id="@+id/icon_home_type_jinkoushuichan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="homeTypeClick"
                android:src="@mipmap/icon_home_type_jinkoushuichan" />

            <ImageView
                android:id="@+id/icon_home_type_huafei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="homeTypeClick"
                android:src="@mipmap/icon_home_type_huafei" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@color/common_view_grey" />

        <com.company.farmerpocket.view.NoScrollGridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="160dp"
            android:paddingLeft="@dimen/dimen_4"
            android:paddingRight="@dimen/dimen_4"
            android:gravity="center"
            android:numColumns="2"
            android:stretchMode="columnWidth" />

    </LinearLayout>

</LinearLayout>
